<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Archetype Created Web Application</display-name>

    <!-- main programm servlets -->
    <!-- index jsp servlet -->
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>ru.job4j.dreamjob.servlet.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index.do</url-pattern>
    </servlet-mapping>
    <!-- post jsp servlet -->
    <servlet>
        <servlet-name>PostServlet</servlet-name>
        <servlet-class>ru.job4j.dreamjob.servlet.PostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostServlet</servlet-name>
        <url-pattern>/post/posts.do</url-pattern>
    </servlet-mapping>
    <!-- candidate jsp servlet -->
    <servlet>
        <servlet-name>CandidateServlet</servlet-name>
        <servlet-class>ru.job4j.dreamjob.servlet.candidate.CandidatesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CandidateServlet</servlet-name>
        <url-pattern>/candidate/candidates.do</url-pattern>
    </servlet-mapping>
    <!-- upload jsp servlet -->
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>ru.job4j.dreamjob.servlet.image_example.UploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/image/upload</url-pattern>
    </servlet-mapping>

    <!-- download jsp servlet -->
    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>ru.job4j.dreamjob.servlet.image_example.DownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/image/download</url-pattern>
    </servlet-mapping>

    <!-- Delete jsp servlet -->
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>ru.job4j.dreamjob.servlet.image_example.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/image/delete</url-pattern>
    </servlet-mapping>

    <!-- Candidate Img servlet -->
    <servlet>
        <servlet-name>CandidateImgServlet</servlet-name>
        <servlet-class>ru.job4j.dreamjob.servlet.candidate.CandidateImgServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CandidateImgServlet</servlet-name>
        <url-pattern>/image/canImg.do</url-pattern>
    </servlet-mapping>

    <!-- Candidate Img del servlet -->
    <servlet>
        <servlet-name>CandidateImgDelServlet</servlet-name>
        <servlet-class>ru.job4j.dreamjob.servlet.candidate.CandidateImgDelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CandidateImgDelServlet</servlet-name>
        <url-pattern>/image/canImgDel.do</url-pattern>
    </servlet-mapping>
</web-app>
